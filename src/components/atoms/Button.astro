---
export interface Props {
  id?: string;
  ariaLabel?: string;
  class?: string;
}
const { id, ariaLabel, class: className = "" } = Astro.props;
---

<button
  id={id}
  type="button"
  aria-label={ariaLabel}
  class={`text-foreground dark:hover:bg-accent/50 dark:bg-input/30 dark:border-input ${className}`}
>
  <slot />
</button>
