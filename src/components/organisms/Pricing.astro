---
import Section from "../atoms/Section.astro";
import CardsPricing from "../molecules/CardsPricing.astro";

const {
  titlePricing,
  titlePricingSection,
  subParagraphPricing,
  titleFaqPricing,
  faqsPricing,
} = Astro.props;
---

<Section
  class="flex-col gap-y-6"
>
  <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-foreground mb-6">
    {titlePricing}
    <span class="text-primary"> {titlePricingSection}</span>
  </h2>

  <p class="text-lg text-muted-foreground">
    {subParagraphPricing}
  </p>

  <CardsPricing />

  <h3 class="my-10 text-2xl font-bold text-foreground mb-8">
    {titleFaqPricing}
  </h3>

  <div class="grid grid-cols-1 md:grid-cols-2 mx-10 md:mx-30 lg:mx-60 gap-x-10 gap-y-5">
    {
      faqsPricing.map((faqs: any) => (
        <div class="text-left">
          <h4 class="font-semibold text-foreground mb-2">{faqs.question}</h4>
          <p class="text-muted-foreground text-sm">{faqs.answer}</p>
        </div>
      ))
    }
  </div>
</Section>
