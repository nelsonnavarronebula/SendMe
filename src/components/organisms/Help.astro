---
import Card from "../atoms/Card.astro";
import CardHelp from "../molecules/CardHelp.astro";
const {
  titleHelper,
  subParagraphHelper,
  buttonTextDemoHelper,
  buttonTextSupportHelper,
  featuresHelper,
} = Astro.props;
---

<section
  class="min-h-[calc(100vh-0px)] flex flex-col items-center justify-center text-foreground overflow-hidden pt-16 gap-y-6 bg-muted/30 mt-2 py-8"
>
  <Card
    class="relative bg-gradient-to-r from-primary/15 via-accent/15 to-primary/15 rounded-3xl p-8 lg:p-16 text-center border border-primary/20 shadow-2xl overflow-hidden w-4/5"
  >
    <h3 class="text-3xl lg:text-4xl font-bold text-foreground mb-6">
      {titleHelper}
    </h3>
    <p class="text-muted-foreground mb-12 text-xl leading-relaxed">
      {subParagraphHelper}
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 justify-center gap-4 xl:gap-8">
      {
        featuresHelper.map((feature: any) => (
          <CardHelp
            title={feature.title}
            icon={feature.icon}
            color={feature.color}
            subtitle={feature.subtitle}
            description={feature.description}
          />
        ))
      }
    </div>
  </Card>
</section>
