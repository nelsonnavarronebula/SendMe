---
const { stats } = Astro.props;
---

<div class="grid grid-cols-2 sm:grid-cols-6 sm:text-center">
  {
    stats.map((stat: any) => (
      <div>
        <p class="text-2xl font-bold text-primary">{stat.value}</p>
        <p class="text-sm text-muted-foreground">{stat.label}</p>
      </div>
    ))
  }
</div>
