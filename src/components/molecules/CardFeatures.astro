---
import Capsule from "../atoms/Capsule.astro";

const { title, subtitle, description } = Astro.props;
---

<div class="flex flex-col items-center gap-y-4 text-center">
  <h4 class="font-semibold text-foreground mb-2">{title}</h4>
  <Capsule>{subtitle}</Capsule>
  <p class="text-muted-foreground text-sm">{description}</p>
</div>
