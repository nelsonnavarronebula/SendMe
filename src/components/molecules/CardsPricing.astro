---
import plans from "../../data/plans.json";
import Button from "../atoms/Button.astro";
import Card from "../atoms/Card.astro";
---

<div class="mx-10 mt-10 grid lg:grid-cols-3 gap-10">
  {
    plans.map((plan, index) => (
      <div
        class={`border rounded-lg p-6 flex flex-col ${plan.popular ? "border-primary shadow-xl scale-105" : "border-border/50"}`}
      >
        {plan.popular && (
          <div class="absolute -top-4 left-1/2 transform -translate-x-1/2 z-10">
            <div class="bg-primary text-primary-foreground px-4 py-2 rounded-full text-sm font-semibold flex items-center">
              ⭐ Más popular
            </div>
          </div>
        )}

        <div class="text-center space-y-4 pt-8">
          <div
            class={`w-16 h-16 mx-auto rounded-2xl flex items-center justify-center ${plan.popular ? "bg-primary" : "bg-muted"}`}
          >
            <Card class="text-2xl">
              {index === 0 ? "🚀" : index === 1 ? "🔥" : "🏢"}
            </Card>
          </div>

          <div>
            <h3 class="text-2xl font-bold">{plan.name}</h3>
            <p class="text-muted-foreground mt-2">{plan.description}</p>
          </div>

          <div class="space-y-2">
            <div class="flex items-baseline justify-center">
              <span class="text-sm text-muted-foreground">$</span>
              <span class="text-4xl font-bold text-foreground">
                {plan.price}
              </span>
              <span class="text-muted-foreground ml-1">{plan.period}</span>
            </div>
            <p class="text-sm text-muted-foreground">Facturación mensual</p>
          </div>
        </div>

        <div class="mt-6 space-y-3">
          <Button
            class={`w-full py-3 rounded-lg font-semibold ${plan.popular ? "bg-primary/40 hover:bg-primary" : "bg-muted hover:bg-muted/80"}`}
          >
            {plan.buttonText}
          </Button>

          <div class="space-y-3">
            <p class="font-semibold text-foreground">Incluye:</p>
            <ul class="space-y-2">
              {plan.features.map((feature) => (
                <li class="flex items-start space-x-2">
                  <span class="text-primary mt-0.5">✔️</span>
                  <span class="text-sm text-muted-foreground">{feature}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    ))
  }
</div>
